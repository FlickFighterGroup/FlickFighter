<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ステータス"
        android:textSize="20dp"
        />

    <GridLayout
        android:id="@+id/gridlayout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_status"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/simple_frame"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Status"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Level"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ATTACK"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:id="@+id/status_attack_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Lv.3"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="DEFENCE"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:id="@+id/status_defence_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="2"
            android:text="Lv.2"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="LIFE"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:id="@+id/status_life_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="3"
            android:text="Lv.5"
            android:textSize="20dp"
            android:background="@drawable/simple_frame"
            />


    </GridLayout>


    <TextView
        android:id="@+id/text_levelUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レベルアップ"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/gridlayout_status"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_levelUp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:columnCount="3"
        android:rowCount="2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LevelUp!"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defence"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="30dp"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LevelUp!"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LevelUp!"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </GridLayout>

    <Button
        android:id="@+id/button_stage_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ステージ選択"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:onClick="stageSelect"
        />

</RelativeLayout>