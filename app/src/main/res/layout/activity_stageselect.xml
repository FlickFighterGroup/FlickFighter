<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title_stageSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ステージセレクト"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        />

    <Button
        android:id="@+id/button_to_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="goToStatus"
        android:text="ステータス"
        />

    <ScrollView
        android:layout_below="@id/title_stageSelect"
        android:layout_above="@id/button_to_status"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage1"
                    android:onClick="stageSelect"
                    android:text="STAGE 1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage2"
                    android:onClick="stageSelect"
                    android:text="STAGE 2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label3"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <Button
                    android:id="@+id/button_stage3"
                    android:onClick="stageSelect"
                    android:text="STAGE 3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage4"
                    android:onClick="stageSelect"
                    android:text="STAGE 4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage5"
                    android:onClick="stageSelect"
                    android:text="STAGE 5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage6"
                    android:onClick="stageSelect"
                    android:text="STAGE 6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage7"
                    android:onClick="stageSelect"
                    android:text="STAGE 7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage8"
                    android:onClick="stageSelect"
                    android:text="STAGE 8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage9"
                    android:onClick="stageSelect"
                    android:text="STAGE 9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_clear_label10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/button_stage10"
                    android:onClick="stageSelect"
                    android:text="STAGE 10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>