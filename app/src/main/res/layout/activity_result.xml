<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLEAR!"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/result_clear_text" />

    <ImageSwitcher
        android:id="@+id/challenge_clear1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/result_clear_text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/challenge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="３分以内にクリア！！"
        android:padding="20dp"
        android:layout_below="@id/result_clear_text"
        android:layout_toRightOf="@id/challenge_clear1"
        android:background="@drawable/simple_frame"
        android:layout_marginTop="50dp" />

    <ImageSwitcher
        android:id="@+id/challenge_clear2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/challenge_clear1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/challenge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ノーダメクリア！！"
        android:padding="20dp"
        android:background="@drawable/simple_frame"
        android:layout_below="@+id/challenge1"
        android:layout_toRightOf="@id/challenge_clear2"
        android:layout_marginTop="50dp" />


    <ImageSwitcher
        android:id="@+id/challenge_clear3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/challenge_clear2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/challenge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="タイプミス0！！"
        android:padding="20dp"
        android:background="@drawable/simple_frame"
        android:layout_below="@+id/challenge2"
        android:layout_toRightOf="@id/challenge_clear3"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/label_to_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="TOUCH TO NEXT"
        android:textSize="30sp"
        android:onClick="goToNext"
        android:clickable="true"
        />


</RelativeLayout>