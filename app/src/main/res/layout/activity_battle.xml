<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="goToResult"
    android:orientation="vertical">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/flick_background"
        />


    <ImageView
        android:id="@+id/enemy_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zako1"
        />

    <SurfaceView
        android:id="@+id/limit_time_bar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@id/enemy_image"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:background="#77000000"
        >

        <EditText
            android:id="@+id/userInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="0dp"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#00000000" />

        <TextView
            android:id="@+id/enemyString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="30dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_debug_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="animation"
        />

    <Button
        android:id="@+id/keyBoardShownButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="keyBoardShown"
        android:text="キーボードを表示" />

</RelativeLayout>
